<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF8F8"
        android:paddingTop="1dp"
        android:orientation="horizontal">
    <Button
        android:id="@+id/assetButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:gravity="left"
        android:text="@string/assets" />
    </LinearLayout>


    <TextView
        android:id="@+id/stickerid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#914FBF"
        android:textSize="20sp"
        android:textColor="#ffffff" />

    <LinearLayout
        android:id="@+id/batteryLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF8F8"
        android:paddingTop="1dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rssi"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingStart="15dp"
            android:text="@string/_64_db"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/batteryLevel"
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="Battery 91%"/>
    </LinearLayout>
    <TextView
        android:id="@+id/environment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dddddd"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:text="Environment" />

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:id="@+id/surfaceAmbientLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#eeeeee"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/surfaceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect_shape"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/surfaceLayout1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/sticker1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:paddingLeft="10dp"
                        android:src="@drawable/surface_2x"
                        android:tint="#FFFFFF" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Surface"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
                <TextView
                    android:id="@+id/surfaceValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#914FBF" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ambientLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rect_shape"
            android:orientation="vertical"
            android:paddingBottom="20dp">
            <LinearLayout
                android:id="@+id/ambientHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ambientImage"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#914FBF"
                    android:paddingLeft="10dp"
                    android:src="@drawable/temperature_2x"
                    android:tint="#FFFFFF" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:layout_weight="1"
                    android:background="#914FBF"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="Ambient"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
            <TextView
                android:id="@+id/ambientValue"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="12dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="#914FBF"/>

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:id="@+id/humidityPressureLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#eeeeee"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/humidityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect_shape"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/humidityHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/humidityImage"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:paddingLeft="10dp"
                        android:src="@drawable/moisture_2x"
                        android:tint="#FFFFFF" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Humidity"
                        android:textColor="#FFFFFF" />

                </LinearLayout>


                <TextView
                    android:id="@+id/humidityValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#914FBF" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/pressureLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect_shape"
                android:orientation="vertical"
                android:paddingBottom="20dp">

               <LinearLayout
                    android:id="@+id/pressureHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/pressureImage"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:paddingLeft="10dp"
                        android:src="@drawable/pressure_2x"
                        android:tint="#FFFFFF" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Pressure"
                        android:textColor="#FFFFFF" />
               </LinearLayout>


                <TextView
                    android:id="@+id/pressureValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#914FBF" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <TextView
        android:id="@+id/handling"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#dddddd"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:text="Handling" />
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:id="@+id/handlingLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="#eeeeee"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/faceupLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect_shape"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/faceHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/anglesImage"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:paddingLeft="10dp"
                        android:src="@drawable/angles_2x"
                        android:tint="#FFFFFF" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Face Up"
                        android:textColor="#FFFFFF" />
                </LinearLayout>


                <TextView
                    android:id="@+id/faceValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#914FBF" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#eeeeee"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/forcesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_rect_shape"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:id="@+id/forcesHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/forcesImage"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:paddingLeft="10dp"
                        android:src="@drawable/forces_2x"
                        android:tint="#FFFFFF" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="37dp"
                        android:layout_weight="1"
                        android:background="#914FBF"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:text="Forces"
                        android:textColor="#FFFFFF" />
                </LinearLayout>


                <TextView
                    android:id="@+id/forcesValue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:gravity="center"
                    android:textSize="24sp"
                    android:textColor="#914FBF"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>