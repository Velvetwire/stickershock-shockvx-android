<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foregroundTint="#FAF8F8"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF8F8"
        android:orientation="horizontal"
        android:paddingTop="1dp">

        <Button
            android:id="@+id/assetButton"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:gravity="left"
            android:text="@string/assets" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/batteryLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF8F8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rssi"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Signal -64 dB"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/batteryLevel"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Battery 91%"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF8F8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/stickerImage"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/stickershock"
            android:tint="#914FBF" />

        <TextView
            android:id="@+id/openDate"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="#914FBF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Space
        android:layout_width="1dp"
        android:layout_height="30dp" />

    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stickerid"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#914FBF"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Space
            android:layout_width="1dp"
            android:layout_height="30dp" />

        <EditText
            android:id="@+id/assetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_shape_2"
            android:backgroundTint="#F1E4FF"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textPersonName"
            android:text="Name"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/assetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_shape_2"
            android:backgroundTint="#F1E4FF"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/trackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect_shape"
            android:text="TRACK"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>