<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:foregroundTint="#FAF8F8"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:id="@+id/mainLayout">
    <TextView
        android:id="@+id/environment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#eeeeee"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:textSize="20sp"
        android:text="Track Asset" />

    <LinearLayout
        android:id="@+id/batteryLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF8F8"
        android:paddingTop="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rssi"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="left"
            android:paddingStart="15dp"
            android:text="@string/_64_db"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/batteryLevel"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="right"
            android:paddingRight="15dp"
            android:text="91%"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imageLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:foregroundTint="#FAF8F8"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/stickerImage"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:tint="#914FBF"
        android:src="@drawable/stickershock" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingRight="20dp">
            <TextView
                android:id="@+id/openDate"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="right"
                android:textColor="#914FBF"
                android:text="Oct 6 2020 at 4:33 PM"/>
            <TextView
                android:id="@+id/openStatus"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="right"
                android:textColor="#914FBF"
                android:text="Opened"/>
         </LinearLayout>
    </LinearLayout>
    <Space
        android:layout_width="1dp"
        android:layout_height="30dp"/>
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect_shape"
        android:orientation="vertical">

        <TextView
            android:id="@+id/stickerid"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#914FBF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center" />
        <Space
            android:layout_width="1dp"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/assetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_shape_2"
            android:backgroundTint="#F1E4FF"
            android:ems="10"
            android:inputType="textPersonName"/>
        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:text="Name" />
        <EditText
            android:id="@+id/assetLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_rect_shape_2"
            android:backgroundTint="#F1E4FF"
            android:ems="10"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/textLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:inputType="textPersonName"
            android:text="Location" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/acceptButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rect_shape"
            android:text="ACCEPT"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>