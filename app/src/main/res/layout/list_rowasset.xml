<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/assetrow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/assetname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="New Asset" />

            <TextView
                android:id="@+id/battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_weight="1"

                android:text="83%" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/stickerid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="70D2-50B3-4A5D-DDF4" />

            <TextView
                android:id="@+id/opened"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="opened 10/7/20" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/sticker"
                android:layout_width="112dp"
                android:layout_height="102dp"
                android:layout_weight="1"
                android:paddingBottom="14dp"
                android:paddingRight="20dp"
                android:tint="#1B71DE"
                android:src="@drawable/stickershock_2x" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/temperature" />

                    <TextView
                        android:id="@+id/surftemp"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="22.60 C"
                        android:textColor="#914FBF"
                        android:textSize="16sp" />


                    <ImageView
                        android:id="@+id/ambtemp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ambient" />

                    <TextView
                        android:id="@+id/airtemp"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="22.60 C"
                        android:textColor="#914FBF"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/moisture_3x" />

                    <TextView
                        android:id="@+id/moisture"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:textColor="#914FBF"
                        android:gravity="center"
                        android:text="49.1 %"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/pressureImage"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/pressure_3x" />

                    <TextView
                        android:id="@+id/pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="1.012 bar"
                        android:textColor="#914FBF"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="-66 dB"
            android:textColor="#914FBF"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>